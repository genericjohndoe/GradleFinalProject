<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.udacity.gradle.builditbigger">

    <!-- Include required permissions for Google Mobile Ads to run -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup">
        <activity
            android:name=".Genres.GenreActivity"
            android:label="@string/genres"
            android:theme="@style/AppTheme">

            <!-- <meta-data -->
            <!-- android:name="android.support.PARENT_ACTIVITY" -->
            <!-- android:value=".MainActivity" /> -->
        </activity>
        <activity
            android:name=".Jokes.JokesActivity"
            android:label="@string/jokes_list"
            android:parentActivityName=".Genres.GenreActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Genres.GenreActivity" />
        </activity>
        <activity
            android:name=".Joke.JokeActivity"
            android:label="@string/jokes_list"
            android:parentActivityName=".Jokes.JokesActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Jokes.JokesActivity" />
        </activity>
        <activity
            android:name=".MainUI.HilarityActivity"
            android:label="@string/title_activity_main22"
            android:theme="@style/AppTheme" />

        <service android:name=".CloudMessaging.HilarityFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".CloudMessaging.HilarityFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".CloudMessaging.HilarityJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>

        <activity
            android:name=".SignInTutorial.LoginActivity"
            android:label="@string/title_activity_login"></activity>
        <activity
            android:name=".SignInTutorial.UserNameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_user_name"
            android:theme="@style/AppTheme" />
        <activity android:name=".Messaging.SentMessages.MessagesActivity" />
        <activity android:name=".Messaging.Transcripts.TranscriptActivity" />
        <activity android:name=".NewPost.NewPostActivity" />
        <activity android:name=".Messaging.ComposeMessage.ComposeMessageActivity" />
        <activity android:name=".NewPost.TextPost.TextPostSubmissionActivity" />
        <activity android:name=".NewPost.ImagePost.ImagePostSubmissionActivity" />
        <activity android:name=".NewPost.VideoPost.VideoPostSubmissionActivity" />
        <activity android:name=".Search.SearchActivity" />
        <activity android:name=".Comments.CommentActivity" />
        <activity android:name=".SubscribersSubsrciptions.SubsActivity" />
        <activity android:name=".NewPost.GifPost.NewGifSubmissionActivity" />
        <activity android:name=".SignInTutorial.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewPost.NewPostActivity2"
            android:label="@string/title_activity_new_post2"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>